RewriteEngine on

#Remove .php extension and handle project parameter.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^projects/([a-z0-9-]+)$ pages/projects.php?project=$1 [L,QSA]

#General rule for other pages.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)$ pages/$1.php [L]